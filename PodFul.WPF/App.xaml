<Application x:Class="PodFul.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PodFul.WPF"
             Startup="Application_Startup">
  <Application.Resources>
    <ResourceDictionary>
      <local:TextTruncator x:Key="TextTruncator" />
      <local:FileSizeConverter x:Key="FileSizeConverter" />
      <local:DownloadDateTimeConverter x:Key="DownloadDateTimeConverter" />

      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="PodFulResourceDictionary.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>

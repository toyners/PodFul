<Window x:Class="PodFul.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PodFul.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500">
  <Grid Margin="10">

    <Grid.RowDefinitions>
      <RowDefinition Height="5*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Grid>

      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <ListBox Name="FeedList" HorizontalContentAlignment="Stretch">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <Grid Margin="0, 2">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <!--<Image Source="{Binding Image}" /> -->
              <TextBlock Text="{Binding Title}" />
            </Grid>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>

      <TextBlock Grid.Row="2">Bottom Left</TextBlock>

      <TextBlock Grid.Column="2">Top Right</TextBlock>

      <TextBlock Grid.Row="2" Grid.Column="2">Bottom Right</TextBlock>
    </Grid>

    <StackPanel Grid.Row="2">
      <StackPanel.Resources>
        <Style TargetType="Button">
        </Style>
      </StackPanel.Resources>

      <Button Margin="5">Add</Button>
      <Button Margin="5">Remove</Button>
      <Button>Sync</Button>
      <CheckBox>Add to WinAmp</CheckBox>
      <Button>Scan</Button>
      <Button>Download</Button>
    </StackPanel>
  </Grid>
</Window>

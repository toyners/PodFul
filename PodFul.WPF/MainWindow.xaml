<Window x:Class="PodFul.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PodFul.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500">
  <Grid Margin="10">

    <Grid.RowDefinitions>
      <RowDefinition Height="8*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Grid>

      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <ListBox Name="FeedList" HorizontalContentAlignment="Stretch">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <Grid Margin="0, 2">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <!--<Image Source="{Binding Image}" /> -->
              <TextBlock Text="{Binding Title}" />
            </Grid>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>

      <TextBlock Grid.Row="2">Bottom Left</TextBlock>

      <TextBlock Grid.Column="2">Top Right</TextBlock>

      <TextBlock Grid.Row="2" Grid.Column="2">Bottom Right</TextBlock>
    </Grid>

    <Border BorderBrush="Black" BorderThickness="1,1,1,1" Grid.Row="2">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
        <StackPanel.Resources>
          <Style TargetType="Button">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
          </Style>
        </StackPanel.Resources>

        <Button Click="addButton_Click">Add</Button>
        <Button Click="removeButton_Click">Remove</Button>
        <Button Click="syncButton_Click">Sync</Button>
        <CheckBox  VerticalContentAlignment="Center" Margin="5">Add to WinAmp</CheckBox>
        <Button Click="scanButton_Click">Scan</Button>
        <Button Click="downloadButton_Click">Download</Button>
      </StackPanel>
    </Border>
  </Grid>
</Window>

<Window x:Class="PodFul.WPF.ProcessingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PodFul.WPF"
        mc:Ignorable="d"
        Title="ProcessingWindow" Height="300" Width="600"
        MinHeight="150" MinWidth="150"
        Icon="baggage_cart_box_tE4_icon.ico">
  <Grid>
    <DockPanel>
      <Button Name="Cancel" DockPanel.Dock="Bottom" Margin="5" Width="60" 
              Height="50" HorizontalAlignment="Right" Click="Cancel_Click">
              Cancel
      </Button>

      <ProgressBar Name="Progress" Margin="5" Height="50" DockPanel.Dock="Bottom"></ProgressBar>

      <Border BorderBrush="Black" BorderThickness="1,1,1,1">
        <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="5">
          <TextBlock Name="Text">Text</TextBlock>
        </ScrollViewer>
      </Border>
    </DockPanel>
  </Grid>
</Window>

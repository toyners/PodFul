<Window x:Class="PodFul.WPF.ProcessingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PodFul.WPF"
        mc:Ignorable="d"
        Title="ProcessingWindow" Height="600" Width="800"
        MinHeight="150" MinWidth="150"
        Icon="baggage_cart_box_tE4_icon.ico">
  <DockPanel Margin="5">
    <Border BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Bottom">
      <Button Name="Cancel" Margin="5" Width="60" 
            Height="50" HorizontalAlignment="Right" Click="Cancel_Click">
        Cancel
      </Button>
    </Border>

    <Border BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Bottom" Margin="0,0,0,5">
      <Grid>
        <ProgressBar Name="Progress" Margin="5" Height="50" />
        <TextBlock Name="ProgressSize" VerticalAlignment="Center" HorizontalAlignment="Center"/>
      </Grid>
    </Border>
    
    <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,5">
      <ScrollViewer Name="FeedbackScroller" VerticalScrollBarVisibility="Visible" Margin="5">
        <TextBlock Name="Feedback" TextWrapping="Wrap" />
      </ScrollViewer>
    </Border>
  </DockPanel>
</Window>

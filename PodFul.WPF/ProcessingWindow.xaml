<Window x:Class="PodFul.WPF.ProcessingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PodFul.WPF"
        mc:Ignorable="d"
        Title="ProcessingWindow" Height="300" Width="600"
        MinHeight="150" MinWidth="150"
        Icon="baggage_cart_box_tE4_icon.ico">
  <Grid>
    <DockPanel>
      <Grid DockPanel.Dock="Bottom">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ProgressBar Height="28"></ProgressBar>
        <Button Grid.Row="1">Cancel</Button>

      </Grid>
      <ScrollViewer VerticalScrollBarVisibility="Visible">
        <TextBlock>Text</TextBlock>
      </ScrollViewer>
    </DockPanel>
  </Grid>
</Window>

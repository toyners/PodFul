<Window x:Class="PodFul.WPF.Windows.RetryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PodFul.WPF.Windows"
        mc:Ignorable="d"
        Title="Retry Failed Downloads" Height="340" Width="600"
        MinHeight="150" MinWidth="150"
        Icon="baggage_cart_box_tE4_icon.ico" 
        WindowStartupLocation="CenterOwner">
  <DockPanel Margin="5">
    <Border BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Bottom" >
      <Button HorizontalAlignment="Right" Width="70" IsDefault="True" Click="CloseButtonClick" Style="{StaticResource ResourceKey=StandardButton}">Close</Button>
    </Border>

    <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,5">
      <Grid>
        <Label>Select downloads to retry:</Label>
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1">
          <ScrollViewer VerticalScrollBarVisibility="Visible">
            <Grid>

            </Grid>
          </ScrollViewer>
        </Border>
      </Grid>
    </Border>
  </DockPanel>
</Window>

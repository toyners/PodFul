<Window x:Class="PodFul.WPF.PodcastDownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PodFul.WPF"
        mc:Ignorable="d"
        Title="PodcastDownloadWindow" Height="600" Width="800"
        MinHeight="150" MinWidth="150"
        Icon="baggage_cart_box_tE4_icon.ico">
  <DockPanel Margin="5">
    <Border BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Bottom">
      <Button Name="Cancel" Margin="5" Width="60" Height="30" HorizontalAlignment="Right" Click="CancelAll_Click">
        Cancel All
      </Button>
    </Border>

    <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,5">
      <ListBox Name="FeedList" HorizontalContentAlignment="Stretch"
                   ScrollViewer.HorizontalScrollBarVisibility="Disabled" PreviewMouseWheel="FeedList_MouseWheel">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <Grid Margin="0,2">
              <ProgressBar Name="Progress" Margin="5" Height="50" />
              <TextBlock Text="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Left" />
              <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Name="ProgressMajorSize" FontSize="24" FontWeight="Bold"/>
                <TextBlock Name="ProgressMinorSize" FontSize="14" Margin="0,11,0,0" FontWeight="Bold"/>
                <TextBlock Name="ProgressUnit" FontSize="14" Margin="0,11,0,0" FontWeight="Bold"/>
              </StackPanel>
              <Button VerticalAlignment="Center" HorizontalAlignment="Right">Cancel</Button>
            </Grid>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </Border>
  </DockPanel>
</Window>

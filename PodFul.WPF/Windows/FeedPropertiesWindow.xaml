<Window x:Class="PodFul.WPF.FeedPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PodFul.WPF"
        mc:Ignorable="d"
        Title="Properties" Height="250" Width="800"
        Icon="baggage_cart_box_tE4_icon.ico" ResizeMode="NoResize">
  <DockPanel Margin="5">
    <Border BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Bottom">
      <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">
        <Button Name="CloseButton" IsDefault="True" Width="70"  
              VerticalContentAlignment="Center" Click="CloseButton_Click"
              Style="{StaticResource StandardButton}">Close</Button>
      </StackPanel>
    </Border>
    <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,2.5" >
      <Grid>

        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Image Source="{Binding ImageFileName}" Grid.Column="0" Margin="2" VerticalAlignment="Top" />

        <Grid Grid.Column="1">
          <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
          </Grid.RowDefinitions>

          <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,5,0" >
            <Label VerticalAlignment="Center">Description:</Label>
            <TextBlock VerticalAlignment="Center" Text="{Binding Path=Description, Converter={StaticResource TextTruncator}, ConverterParameter=100}" TextWrapping="Wrap" />
          </StackPanel>

          <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label VerticalAlignment="Center">Website:</Label>
            <TextBlock VerticalAlignment="Center" Text="{Binding Path=Website, Converter={StaticResource TextTruncator}, ConverterParameter=100}" />
          </StackPanel>

          <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label VerticalAlignment="Center">Directory:</Label>
            <TextBlock VerticalAlignment="Center" Text="{Binding Path=Directory, Converter={StaticResource TextTruncator}, ConverterParameter=100}" />
          </StackPanel>

          <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Label VerticalAlignment="Center">URL:</Label>
            <TextBlock VerticalAlignment="Center" Text="{Binding Path=URL, Converter={StaticResource TextTruncator}, ConverterParameter=100}" />
          </StackPanel>

          <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Label VerticalAlignment="Center">Podcasts:</Label>
            <TextBlock VerticalAlignment="Center" Text="{Binding Podcasts.Length}" />
          </StackPanel>

          <StackPanel Grid.Row="5" Orientation="Horizontal">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
              </Grid.ColumnDefinitions>

              <StackPanel Grid.Column="0" Orientation="Horizontal" Width="280">
                <Label VerticalAlignment="Center">Created:</Label>
                <TextBlock VerticalAlignment="Center" Text="{Binding Path=CreationDateTime, Converter={StaticResource GeneralDateTimeConverter}}" />
              </StackPanel>

              <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Label VerticalAlignment="Center">Updated:</Label>
                <TextBlock VerticalAlignment="Center" Text="{Binding Path=UpdatedDateTime, Converter={StaticResource GeneralDateTimeConverter}}" />
              </StackPanel>
            </Grid>
          </StackPanel>
        </Grid>
      </Grid>
    </Border>
  </DockPanel>
</Window>

<Window x:Class="PodFul.WPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PodFul.WPF"
        mc:Ignorable="d"
        Title="Settings" Height="300" Width="300"
        MinHeight="150" MinWidth="150"
        Icon="baggage_cart_box_tE4_icon.ico">
  <DockPanel Margin="5">
    <Border BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Bottom">
      <Button Margin="5" Width="60" Height="50"
              HorizontalAlignment="Right">
        Close
      </Button>
    </Border>

    <ListBox Name="FilePathList" HorizontalContentAlignment="Stretch" BorderBrush="Black" BorderThickness="1,1,1,1" Margin="0,0,0,5">
    </ListBox>
  </DockPanel>
</Window>
